		public class ParticlesView extends Sprite {				//vars				//objects		private var appData:AppData=AppData.instance;				private var emitter:Emitter2D;		private var renderer:DisplayObjectRenderer;		private var imgClass:ImageClass;		private var zone:LineZone;		private var zone2:PointZone;		private var position:Position;		private var velocity:Velocity;				//const		public const NAME:String="particlesView";		public const RETURNTYPE:String=NAME;				public function ParticlesView(){						init();		}		//*****Initialization Routines				public function init():void{			debug("init()");						initVars();			initEvents();			initObjs();		}				private function initVars():void{					}				private function initEvents():void{			appData.eventManager.listen(NAME, onParticlesView);		}				private function initObjs():void{			emitter=new Emitter2D();			renderer=new DisplayObjectRenderer();			imgClass=new ImageClass(RadialDot, [2]);						renderer.addEmitter(emitter);			addChild(renderer);						zone=new LineZone(new Point(-5,-5), new Point(505,-5));			position=new Position(zone);						zone2=new PointZone(new Point(0,65));			velocity=new Velocity(zone2);						emitter.counter=new Steady(100);			emitter.addInitializer(imgClass);			emitter.addInitializer(position);			emitter.addInitializer(velocity);			emitter.addInitializer(new ScaleImageInit(.75,2));			emitter.addAction(new RandomDrift(15,15));			emitter.addAction(new Move());			emitter.addAction(new DeathZone(new RectangleZone(-10,-10,520,420),true));						emitter.start();			emitter.runAhead(10);		}		//*****Core Functionality						//*****Event Handlers				private function onParticlesView(e:MuleEvent):void{			/*debug("onParticlesView()");			debug("e.data.sender=="+e.data.sender);			debug("e.data.type=="+e.data.type);*/			switch(e.data.type){																default:					debug("onParticlesView()");					debug("*type not found");					debug("e.data.sender=="+e.data.sender);					debug("e.data.type=="+e.data.type);				break;							}		}				//*****Gets and Sets						//*****Utility Functions				//**visibility		public function show():void{			this.visible = true;		}				public function hide():void{			this.visible = false;		}				//**debug		private function debug(str:String):void{			appData.debug(NAME,str);		}				}//end class}//end package